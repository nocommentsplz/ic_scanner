        <!--android:layout_gravity="bottom|center_horizontal"-->
        <!--android:text="Snap" />-->

    <ImageButton
        android:id="@+id/snap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:srcCompat="@android:drawable/ic_menu_camera" />

